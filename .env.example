# AI Companion Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenRouter API Key for LLM
# Sign up at https://openrouter.ai
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ElevenLabs API Key for Text-to-Speech
# Sign up at https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here

# Hugging Face API for Stable Diffusion
# Sign up at https://huggingface.co and create a token
# with read access to use the inference API
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Stable Diffusion Configuration
# Set to True to use a local model (requires downloading model files)
# Set to False to use the Hugging Face API (requires HUGGINGFACE_TOKEN)
USE_LOCAL_MODEL=False

# Model IDs for Stable Diffusion
# For local use - this is the model ID or local path
SD_MODEL_ID=stabilityai/stable-diffusion-2-1-base

# For API use - this is the model endpoint on Hugging Face
SD_API_MODEL=stabilityai/stable-diffusion-2-1

# Memory optimization for local Stable Diffusion
# Set to True if you have limited GPU/CPU memory
LOW_MEMORY=True 